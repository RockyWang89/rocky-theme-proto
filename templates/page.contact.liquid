<h1>{{ page.title }}</h1>
<div>
  {{ page.content }}
</div>
{% form 'contact' %}
  {{ form.errors | default_errors }}

  <div class="email">
    <label for="email">Email</label>
    <input type="email" name="contact[email]" />
  </div>

  <div class="message">
    <label for="message">Message</label>
    {% comment %} Name property of the input can be set with "contact[XXX]", 
    and when the email is sent to the registered email address,
    XXX will be a field in the email {% endcomment %}
    <textarea name="contact[message]"></textarea>
  </div>

  <div class="submit">
    <input type="submit" value="Create" />
  </div>
{% endform %}